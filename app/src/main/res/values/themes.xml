<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.USBSerialTelnetServer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
        <!-- Status bar on the top -->
        <item name="android:statusBarColor">@color/teal_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Title color -->
        <item name="titleColor">@color/teal_light</item>
        <item name="titleTextColor">@color/black</item>
        <!-- Bottom panel color -->
        <item name="bottomPanelColor">@color/gray</item>
        <item name="bottomPanelDividerColor">@color/black</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/gray</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_light</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color_dark</item>
    </style>
</resources>